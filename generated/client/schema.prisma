generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id          Int       @id @default(autoincrement())
  email       String    @unique
  password    String
  credentials Credential[]
  notes       Note[]
  cards       Card[]
}

model Credential {
  id         Int      @id @default(autoincrement())
  title      String   @unique
  url        String
  username   String
  password   String
  userId     Int
  user       User     @relation(fields: [userId], references: [id])
}

model Note {
  id         Int      @id @default(autoincrement())
  title      String   @unique
  content    String
  userId     Int
  user       User     @relation(fields: [userId], references: [id])
}

model Card {
  id            Int      @id @default(autoincrement())
  title         String   @unique
  cardNumber    String
  cardHolder    String
  securityCode  String
  expiration    String
  isVirtual     Boolean
  type          String   // "credit", "debit", "both"
  userId        Int
  user          User     @relation(fields: [userId], references: [id])
}

